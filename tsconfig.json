{
  "compilerOptions": {
    "outDir": "./lib",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "dom"],
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "declaration": true,
    "baseUrl": "./packages",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noErrorTruncation": true,
    "paths": {
      "@crensoft/test-utils": ["./test-utils/src"],
      "@crensoft/test-utils/*": ["./test-utils/src/*"]
    }
  },
  "exclude": ["node_modules", "lib"]
}
